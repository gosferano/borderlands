---
import BaseLayout from '../../layouts/BaseLayout.astro';
import BuildCard from '../../components/BuildCard.astro';
import { getCollection } from 'astro:content';

const builds = (await getCollection('builds')).sort(
  (a, b) => b.data.updatedDate.valueOf() - a.data.updatedDate.valueOf()
);
---

<BaseLayout title="All Builds">
  <section class="mx-auto max-w-5xl px-6 py-10">
    <h1 class="mb-6 text-center text-4xl font-bold">All Borderlands 4 Builds</h1>

    <!-- Grid with max 2 columns -->
    <div class="grid gap-8 sm:grid-cols-1 md:grid-cols-2">
      {builds.map((build) => <BuildCard build={build} />)}
    </div>
  </section>
</BaseLayout>
