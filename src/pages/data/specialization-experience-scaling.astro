---
import BaseLayout from '../../layouts/BaseLayout.astro';
import CsvChart from '../../components/CsvChart.astro';
---

<BaseLayout title="Specialization Scaling">
  <section class="mx-auto max-w-5xl px-6 py-10">
    <h1 class="mb-10 text-center text-4xl font-bold text-gray-900 dark:text-white">
      Specialization Experience Scaling
    </h1>

    <!-- Regular Chart Card -->
    <div
      class="mb-10 w-full rounded-2xl border border-gray-100 bg-white p-6 shadow-lg dark:border-gray-700 dark:bg-gray-800"
    >
      <h2 class="mb-4 text-center text-xl font-semibold text-gray-800 dark:text-gray-100">
        XP Required per Level
      </h2>
      <CsvChart
        csvPath="./src/data/specialization-level-scaling.csv"
        xColumn="Level"
        yColumn="Experience Required"
        chartLabel="XP Required per Level"
      />
    </div>

    <!-- Cumulative Chart Card -->
    <div
      class="w-full rounded-2xl border border-gray-100 bg-white p-6 shadow-lg dark:border-gray-700 dark:bg-gray-800"
    >
      <h2 class="mb-4 text-center text-xl font-semibold text-gray-800 dark:text-gray-100">
        Cumulative XP Required
      </h2>
      <CsvChart
        csvPath="./src/data/specialization-level-scaling.csv"
        xColumn="Level"
        yColumn="Experience Required"
        chartLabel="Cumulative XP Required"
        cumulative={true}
      />
    </div>
  </section>
</BaseLayout>
